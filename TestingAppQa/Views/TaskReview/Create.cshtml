

@model TestingAppQa.Models.TaskReviewVm

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}


<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="modal-body">
                <label asp-for="Title" class="control-label">Titulo de la tarea</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
                <label asp-for="Title" class="control-label">Descripcion</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>

                <label asp-for="Title" class="control-label">Seleccionar HU</label>
                <br />
                <select asp-for="@Model.idhu" asp-items="@Model.History">
                    <option value="0">Selecciona una historia de usuario</option>
                </select>
                <br />
                <label asp-for="ReponsabilityUser" class="control-label">Responsable</label>
                <input asp-for="ReponsabilityUser" class="form-control" />
                <span asp-validation-for="ReponsabilityUser" class="text-danger"></span>
            </div>
            <div class=" d-flex justify-content-between p-2 form-group">
                <div>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success">Confirm</button>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

