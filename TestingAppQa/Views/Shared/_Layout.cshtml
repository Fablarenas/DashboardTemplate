<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Profile</title>
    <meta name="description" content="profile">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
    <link rel="apple-touch-icon" href="https://i.imgur.com/QRAUqs9.png">
    <link rel="shortcut icon" href="https://i.imgur.com/QRAUqs9.png">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/normalize.css@8.0.0/normalize.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lykmapipo/themify-icons@0.1.2/css/themify-icons.css">
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/pixeden-stroke-7-icon@1.2.3/pe-icon-7-stroke/dist/pe-icon-7-stroke.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.2.0/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/cs-skin-elastic.css">
    <link rel="stylesheet" href="~/css/style.css">

    <link href="https://cdn.jsdelivr.net/npm/chartist@0.11.0/dist/chartist.min.css" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/jqvmap@1.5.1/dist/jqvmap.min.css" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/weathericons@2.1.0/css/weather-icons.css" rel="stylesheet" />

    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@3.9.0/dist/fullcalendar.min.css" rel="stylesheet" />


</head>
<body>
    @using Microsoft.AspNetCore.Identity
    @inject SignInManager<User> SignInManager
    @inject UserManager<User> UserManager
    <!-- Left Panel -->
    @if (SignInManager.IsSignedIn(User))
    {
        <aside id="left-panel" class="left-panel">
            <nav class="navbar navbar-expand-sm navbar-default">
                <div id="main-menu" class="main-menu collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="active">
                            <a asp-controller="Projects" asp-action="Index"><i class="menu-icon fa fa-laptop"></i>Proyectos </a>
                        </li>
                        <li>
                            <a asp-controller="Sprints" asp-action="Index"> <i class="menu-icon ti-email"></i>Sprints </a>
                        </li>
                        <li>
                            <a asp-controller="UserHistories" asp-action="Index"> <i class="menu-icon ti-email"></i>Historias De Usuario </a>
                        </li>
                        <li>
                            <a asp-controller="Tools" asp-action="Index"> <i class="menu-icon ti-email"></i>Seleccion Herramientas</a>
                        </li>
                        <li>
                            <a asp-controller="Risks" asp-action="Index"> <i class="menu-icon ti-email"></i>Riesgos</a>
                        </li>
                        <li>
                            <a asp-controller="Scopes" asp-action="Index"> <i class="menu-icon ti-email"></i>Alcances</a>
                        </li>
                        <li>
                            <a asp-controller="TestCases" asp-action="Index"> <i class="menu-icon ti-email"></i>Casos De Prueba</a>
                        </li>
                        <li>
                            <a asp-controller="TimeOuts" asp-action="Index"> <i class="menu-icon ti-email"></i>Tiempos De Salida</a>
                        </li>
                        <li>
                            <a asp-controller="UserHistoriesTestType" asp-action="Index"> <i class="menu-icon ti-email"></i>Tipos de pruebas</a>
                        </li>
                        <li>
                            <a asp-controller="TaskReview" asp-action="Index"> <i class="menu-icon ti-email"></i>Seguimiento de Pruebas</a>
                        </li>
                        <li>
                            <a asp-controller="Metrics" asp-action="Index"> <i class="menu-icon ti-email"></i>Metricas</a>
                            <a asp-controller="ConsolidationReports" asp-action="Index"> <i class="menu-icon ti-email"></i>Reportes</a>
                        </li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </nav>
        </aside>
    }
    <!-- /#left-panel -->

    @if (SignInManager.IsSignedIn(User))
    {
        <div id="right-panel" class="right-panel">

            <partial name="_LoginPartial" />
            <div class="content">
                @RenderBody()
            </div>
        </div>
    }
    else
    {

        @RenderBody()

    }
    <div class="modal" tabindex="-1" role="dialog" id="form-modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">

                </div>

            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/jquery@2.2.4/dist/jquery.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/moment@2.22.2/moment.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@3.9.0/dist/fullcalendar.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
