@model TestingAppQa.Models.TestCase

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Estas seguro que quieres eliminar este caso de prueba?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="TestType" class="control-label">Tipo de test</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TestType)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Var" class="control-label">Variable</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Var)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="StepStep" class="control-label">Paso a Paso</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StepStep)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Analyst" class="control-label">Analista Encargado</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Analyst)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdTestCase" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a lista de Casos de prueba</a>
    </form>
</div>
