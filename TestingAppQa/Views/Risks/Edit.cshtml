@model TestingAppQa.Models.Risk

@{
    ViewData["Title"] = "Editar";
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="modal-body">
                <input type="hidden" asp-for="IdRisk" />
                <label asp-for="Name" class="control-label">Nombre</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <label asp-for="MitigationStrategy" class="control-label">Estrategia de mitigacion</label>
                <input asp-for="MitigationStrategy" class="form-control" />
                <span asp-validation-for="MitigationStrategy" class="text-danger"></span>
                <label asp-for="RiskDependency" class="control-label">Dependencia</label>
                <input asp-for="RiskDependency" class="form-control" />
                <span asp-validation-for="RiskDependency" class="text-danger"></span>
                <input type="hidden" asp-for="UserHistory" />
            </div>
            <div class=" d-flex justify-content-between p-2 form-group">
                <div>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success">Confirmar</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}