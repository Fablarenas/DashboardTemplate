@model TestingAppQa.Models.Risk

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3>Estas seguro que quieres borrar el siguiente Riesgo?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Name" class="control-label">Nombre Modulo</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="MitigationStrategy" class="control-label">Estrategia de mitigación</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MitigationStrategy)
        </dd>
        <dt class="col-sm-2">
            <label asp-for="RiskDependency" class="control-label">Dependencia</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RiskDependency)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdRisk" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista de Riesgos</a>
    </form>
</div>
