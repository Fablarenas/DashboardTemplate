

@model TestingAppQa.Models.Project

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}


<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="modal-body">
                <label asp-for="Name" class="control-label">Nombre</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>

                <label asp-for="description" class="control-label">Descripcion</label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class=" d-flex justify-content-between p-2 form-group">
                <div>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success">Confirm</button>
                </div>
            </div>
        </form>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class=" d-flex justify-content-between p-2 form-group">
                <div>
                    <button type="submit" onclick="showInPopup('@Url.Action("Delete","Projects",new {id=Model.IdProject},Context.Request.Scheme)','¿Esta Seguro que desea eliminar este proyecto?')" class="btn btn-danger">Borrar Proyecto</button>
                </div>
            </div>


    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

